                    <config_path>sequra/core/allow_sevices</config_path>
                    <label>Allow selling services</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="default_service_end_date" translate="label" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <config_path>sequra/core/default_service_end_date</config_path>
                    <label>Allow selling services</label>

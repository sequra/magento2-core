                </field>
                <field id="allow_remotesales" translate="label" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <config_path>sequra/core/allow_remotesales</config_path>
                    <label>Allow remote sales</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field> -->
                <field id="test_ip" translate="label" type="text" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <config_path>sequra/core/test_ip</config_path>
                    <label>Test IP addrs.</label>
                </field>
                <field id="test" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1">
                    <config_path>sequra/core/endpoint</config_path>
                    <label>Mode</label>
                    <source_model>Sequra\Core\Model\Adminhtml\Source\Endpoint</source_model>
                </field>
                <field id="autoinvoice" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                    <config_path>sequra/core/autoinvoice</config_path>
                    <label>Create invoice</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="order_status" translate="label" type="select" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1">
                    <config_path>sequra/core/order_status</config_path>
                    <label>New Order Status</label>
                    <depends><field id="autoinvoice">1</field></depends>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\Processing</source_model>
                </field>
                <field id="new_order_status" translate="label" type="select" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <config_path>sequra/core/new_order_status</config_path>
                    <label>New Order Status</label>
                    <depends><field id="autoinvoice">0</field></depends>
                    <source_model>Magento\Sales\Model\Config\Source\Order\Status\NewStatus</source_model>
                </field>
            </group>
        </section>
        <section id="system">
            <group id="sequra" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>Sequra Reporting</label>
                <field id="reporting" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <config_path>sequra/core/reporting</config_path>
                    <label>Enable Delivery Report sending to SeQura</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="reportingtime" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <config_path>sequra/core/reportingtime</config_path>
                    <label>Time to send reports to SeQura</label>
                    <source_model>Sequra\Core\Model\Adminhtml\Source\Hour</source_model>
                </field>
                <field id="statsperiod" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="0">
                    <config_path>sequra/core/statsperiod</config_path>
                    <label>Send stats of the last...</label>
                    <source_model>Sequra\Core\Model\Adminhtml\Source\StatsPeriod</source_model>
                </field>
                <field id="allowspecificstattypes" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="0">
                    <config_path>sequra/core/allowspecificstattypes</config_path>
                    <comment><![CDATA[Help improve SeQura by sending anonymous usage statistics]]></comment>
                    <label>Allow sending statistics with the report</label>
                    <source_model>Sequra\Core\Model\Adminhtml\Source\Allowspecificstattypes</source_model>
                </field>
                <field id="specificstattypes" translate="label" type="multiselect" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0">
                    <config_path>sequra/core/specificstattypes</config_path>
                    <depends>
                        <field id="allowspecificstattypes">1</field>
                    </depends>
                    <label>Select allowed stats if any</label>
                    <can_be_empty>1</can_be_empty>
                    <source_model>Sequra\Core\Model\Adminhtml\Source\Specificstattypes</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
